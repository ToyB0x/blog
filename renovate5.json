{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", "group:allNonMajor", ":semanticCommits"],
  "reviewers": ["ToyB0x"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "rangeStrategy": "pin"
}
