---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import astro from '../assets/avatar/avatar.png'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['TypeScript', 'Golang', 'Python']
const frontend = ['React', 'Vue.js', 'Next.js', 'Remix', 'WXT (browser extension)']
const backend = ['Node.js', 'NestJS', 'GraphQL Yoga', 'Hono', 'Prisma', 'Drizzle', 'Chi', 'SQLBoiler', 'Django', 'Scrapy' ]
const others = ['Terraform', 'Ansible', 'Pulumi']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<Image
				src={astro}
				alt='profile photo'
				class='h-28 w-auto p-2'
				loading='eager'
			/>

			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-3xl font-bold'>ToyB0x</h1>
				<a
					target='_blank'
					href='https://docs.google.com/forms/d/e/1FAIpQLScBqA7bDNnqIuC_wOYxnPRctBQKAKWHIiRkkJvq9Wv_3aJYQA/viewform?usp=sf_link'
					class='flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md'
				>
					<span class='relative flex items-center justify-center'>
						<span
							class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
						></span>
						<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
					</span>

					<p class='font-medium'>Get contact with me</p>
				</a>
				<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
					<Label title='3-shake'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M4.615 20q-.69 0-1.152-.462Q3 19.075 3 18.385v-9.77q0-.69.463-1.152Q3.925 7 4.615 7H9V5.615q0-.69.463-1.152Q9.925 4 10.615 4h2.77q.69 0 1.153.463q.462.462.462 1.152V7h4.385q.69 0 1.152.463q.463.462.463 1.152v9.77q0 .69-.462 1.152q-.463.463-1.153.463zm0-1h14.77q.23 0 .423-.192q.192-.193.192-.423v-9.77q0-.23-.192-.423Q19.615 8 19.385 8H4.615q-.23 0-.423.192Q4 8.385 4 8.615v9.77q0 .23.192.423q.193.192.423.192M10 7h4V5.615q0-.23-.192-.423Q13.615 5 13.385 5h-2.77q-.23 0-.423.192q-.192.193-.192.423zM4 19V8z'
							></path></svg
						>
					</Label>
					<Label title='Fukuoka'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
							></path></svg
						>
					</Label>
					<Label
						title='Github'
						as='a'
						href='https://github.com/ToyB0x'
						target='_blank'
					>
						<svg xmlns="http://www.w3.org/2000/svg"
							 viewBox='0 0 24 24'
							 class='h-5 w-5'
							 slot='icon'
							 fill="none"
							 stroke="currentColor">
								<path
									d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
								<path d="M9 18c-4.51 2-5-2-7-2"/>
						</svg>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p>
				TypeScript / Golang 等でお仕事しているエンジニアです(フロント/サーバ両対応)。 普段は3-shakeのあるチームの開発リーダとして和気あいあいと仕事させて貰っています🚀
			</p>
		</Section>
		<Section title='Publications'>
			<ul class='flex flex-col gap-y-2'>
				<li class='flex flex-col gap-x-2 sm:flex-row'>
					<a href="https://gihyo.jp/article/2024/07/hosting-honeypot-on-cloud-01" target="_blank">
						3大クラウド×日米両リージョンでハニーポットを動かしてみる (技術評論社様 寄稿記事)
					</a>
				</li>
				<li class='flex flex-col gap-x-2 sm:flex-row'>
					<a href="https://techbookfest.org/product/7YmreZxhKtPMKpq1LYXSkF" target="_blank">
						Pulumi を利用したエフェメラル環境でのインテグレーションテスト (技術書典)
					</a>
				</li>
				<li class='flex flex-col gap-x-2 sm:flex-row'>
					<a href="https://github.com/ToyB0x/batch-processing-best-practices" target="_blank">
						バッチ処理ベストプラクティス集 (OSS)
					</a>
				</li>
			</ul>
		</Section>

			{
			allPostsByDate.length > 0 && (
				<Section title='Posts'>
					<ul class='flex flex-col gap-y-2'>
						{allPostsByDate.map((p) => (
							<li class='flex flex-col gap-x-2 sm:flex-row'>
								<PostPreview post={p} />
							</li>
						))}
					</ul>
				</Section>
			)
		}

		<Section title='Experience'>
			<Card
				heading='3-shake'
				subheading='Full Cycle Developer / Dev Team Leader'
				date='2021 - Now'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>フロント側開発やチームのサポート(Next.js / Remixの導入や運用・実装支援)</li>
					<li>サーバ側開発 (NestJS / GraphQL Yoga / Prismaの導入等含む、新機能開発)</li>
					<li>インフラ構築 / 運用 / 監視 (主にTerraform管理)</li>
					<li>CI/CD構築 (CloudBuild / Github Actionsで構築)</li>
				</ul>
			</Card>
			<Card
				heading='Freelance'
				subheading='Full Stack Developer'
				date='2015 - 2021'
			>
			</Card>
		</Section>

		<Section title='Projects'>
			<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
				<ProjectCard
					href='https://readx.me/@ToyB0x'
					heading='Readx'
					subheading='技術ドキュメント等のインプットを管理/共有するための実験的サービス'
					imagePath='/src/assets/coming-soon.png'
					altText='read-x'
					class='w-full sm:w-1/2'
				/>
			</div>
		</Section>

		<Section title='Certifications'>
			<Card
				as='a'
				heading='Professional Cloud Architect'
				date='April 2024 - May 2026'
				href='https://cloud.google.com/learn/certification/cloud-architect'
			/>
			<Card
				as='a'
				heading='Professional Cloud Developer'
				date='June 2023 - July 2025'
				href='https://cloud.google.com/learn/certification/cloud-developer'
			/>
			<Card
				as='a'
				heading='Professional Cloud Security Engineer'
				date='April 2024 - May 2026'
				href='https://cloud.google.com/learn/certification/cloud-security-engineer'
			/>
		</Section>

		<Section title='Skills'>
			<SkillLayout title='Languages' skills={languages} />
			<SkillLayout title='Frontend' skills={frontend} />
			<SkillLayout title='Backend' skills={backend} />
			<SkillLayout title='Others' skills={others} />
		</Section>
	</div>
</PageLayout>
